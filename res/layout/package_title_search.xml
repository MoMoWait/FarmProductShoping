<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="5dp" >

    <ImageView
        android:id="@+id/img_app_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/app_icon" />

    <EditText
        android:id="@+id/edit_shop_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/img_shop_search"
        android:layout_toRightOf="@+id/img_app_icon"
        android:background="@drawable/edit_text_normal"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingLeft="2dp" />

    <ImageView
        android:id="@+id/img_shop_search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:src="@drawable/shop_search" />

</RelativeLayout>