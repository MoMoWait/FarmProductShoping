<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include layout="@layout/package_title_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_category_fruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/blue_line"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="@string/fruit" />

        <TextView
            android:id="@+id/text_category_vegatbale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/blue_line"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="@string/vegetables" />

        <TextView
            android:id="@+id/text_category_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/blue_line"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="@string/other" />
    </LinearLayout>

    <ListView 
        android:layout_marginTop="10dp"
        android:id="@+id/list_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
</LinearLayout>